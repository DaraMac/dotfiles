// -*- mode: jsonc -*-
[{
    "output": "eDP-1",
    "position": "bottom", // Waybar position (top|bottom|left|right)
    "height": 28, // Waybar height (to be removed for auto height)
    "spacing": 0, // Gaps between modules (4px)

    // Choose the order of the modules
    "modules-left": [
        "hyprland/workspaces",
        "sway/scratchpad",
        "hyprland/submap"
    ],
    "modules-center": [
        "sway/window"
    ],
    "modules-right": [
        "pulseaudio",
        "battery",
        "network",
        "clock",
        "clock#time",
        "tray"
    ],
    // Modules configuration
    "hyprland/submap": {
        "format": "<span style=\"italic\">{}</span>"
    },
    "sway/scratchpad": {
        "format": "{icon} {count}",
        "show-empty": false,
        "format-icons": ["", "ï‹’"],
        "tooltip": true,
        "tooltip-format": "{app}: {title}"
    },
    "tray": {
        "icon-size": 18,
        "spacing": 10
    },
    "clock": {
        "format": "{:%Y-%m-%d %a}",
        "tooltip-format": "<tt><big>{calendar}</big></tt>",
        "calendar": {
            "format": {
                "months":   "<span color='#ffead3'><b>{}</b></span>",
                "days":     "<span color='#ecc6d9'><b>{}</b></span>",
                "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
                "today":    "<span color='#ff6699'><b><u>{}</u></b></span>"
            }
        },
        "on-click": "gnome-calendar"
    },
    "clock#time": {
        "format": "{:%H:%M}",
        "tooltip-format": "{:%I:%M %p %Z %z}",
        "on-click": "gnome-clocks"
    },
    "battery": {
        "format": "{capacity}% {icon}",
        "format-icons": ["ğŸª«", "ğŸ”‹"],
        "format-full": "{capacity}% ğŸ”‹",
        "format-charging": "{capacity}% âš¡",
        "format-alt": "{time}",
    },
    "network": {
        "format-wifi": "{essid} ({signalStrength}%) ï‡«",
        "format-ethernet": "{ipaddr}/{cidr} ğŸŒ",
        "tooltip-format": "{ifname} via {gwaddr} ğŸŒ",
        "format-linked": "{ifname} (No IP) ğŸŒ",
        "format-disconnected": "Disconnected âš ",
        "on-click": "nm-applet"
    },
    "pulseaudio": {
        "format": "{volume}% {icon}",
        "format-bluetooth": "{volume}% ïŠ” {icon}",
        "format-bluetooth-muted": "ï€¦ ïŠ” {icon}",
        "format-muted": "ï€¦",
        "format-source": "{volume}%",
        "format-source-muted": "ï€¦",
        "format-icons": {
            "headphone": "ï€¥",
            "hands-free": "ğŸ§",
            "headset": "ğŸ§",
            "default": ["ï€¦", "ï€§", "ï€¨"]
        },
        "on-click": "flatpak run com.saivert.pwvucontrol"
    }
},
{
    // output on all monitors EXCEPT the laptop screen
    "output": "!eDP-1",
    "position": "bottom",
    "height": 28,
    "spacing": 0,

    "modules-left": [
        "hyprland/workspaces",
        "hyprland/submap"
    ],
    "modules-center": [
        "sway/window"
    ],
    // Modules configuration
    "hyprland/submap": {
        "format": "<span style=\"italic\">{}</span>"
    }
}]
